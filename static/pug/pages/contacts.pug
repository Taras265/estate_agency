extends  ../_skeleton

//- Includes
include  ../elements/_ui-tabs-classic
include  ../elements/_ui-material-parallax
include ../elements/_widget-list-social
include ../elements/_ui-google-map

//-Title
block title
	title= cfg.nav.contacts.title

//- Page
block page

	// Page Head
	header.section.page-head
		//- RD Navbar
		+rd-navbar-top-panel(
		'rd-navbar-light',
		{
			"data-lg-auto-height": "true",
			"data-md-layout": 'rd-navbar-fixed',
			"data-lg-layout": 'rd-navbar-static',
			"data-lg-stick-up": 'true'
		},
		cfg.brand.logo,
		cfg.nav.contacts,
		cfg.nav
		)

	+breadcrumbs({
		title: 'Contacts',
		pathList: [
			{itemTitle: 'Contacts'}
		]
	})


	//Section Contact Info
	section.section.bg-lighter.section-66.novi-background( data-preset!={ title:'Contacts', category:'contacts', reload:false, id:'contacts' } )
		.container.container-wide
			.row.row-fix.justify-content-sm-center.text-md-left
				.col-sm-10.col-md-8.col-lg-12
					.row.row-50.justify-content-sm-center
						.col-sm-6.col-lg-3.col-xxl-2
							.unit.unit-spacing-xs.unit-sm.flex-md-row.contact-info-1
								.unit-left
									span.icon.novi-icon.mdi.mdi-phone.text-primary
								.unit-body
									h6 Phones
									.p
										ul.list-unstyled
											li: a.d-block(href="tel:1-800-1234-567") 1-800-1234-567
											li: a.d-block(href="tel:1-800-6547-987") 1-800-6547-987
						.col-sm-6.col-lg-3.col-xxl-2
							.unit.unit-spacing-xs.unit-sm.flex-md-row.contact-info-1
								.unit-left
									span.icon.novi-icon.mdi.mdi-email-open.text-primary
								.unit-body
									h6 E-mail
									.p
										a.d-block(href="mailto:info@demolink.org") info@demolink.org
						.col-sm-6.col-lg-3.col-xxl-2
							.unit.unit-spacing-xs.unit-sm.flex-md-row.contact-info-1
								.unit-left
									span.icon.novi-icon.mdi.mdi-map.text-primary
								.unit-body
									h6 Address
									address.contact-info 213, New Lenox, Chicago, IL 60606
						.col-sm-6.col-lg-3.col-xxl-2
							.unit.unit-spacing-xs.unit-sm.flex-md-row.contact-info-1
								.unit-left
									span.icon.novi-icon.mdi.mdi-timelapse.text-primary
								.unit-body
									h6 Open Hours
									div
										p 8:00 – 19:00 Mon – Fri
									p.offset-top-0 9:00 – 17:00 Sat

	//Section Get In Touch
	section.section.section-98.section-md-110.bg-default.novi-background( data-preset!={ title:'Contact form 2', category:'contacts', reload:true, id:'contact-form-2' } )
		.container
			h2.font-weight-bold Get In Touch
			hr.divider.bg-saffron
			.offset-md-top-66
				.row.row-fix.justify-content-sm-center
					.col-sm-10.col-lg-8
						// RD Mailform
						form.rd-mailform.rd-form.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
							.row.row-20.justify-content-sm-center
								.col-md-6
									.form-group
										label.form-label(for="mailform-first-name") First name
										input#mailform-first-name.form-control.bg-white(type="text" name="first name" data-constraints="@Required")
								.col-md-6
									.form-group
										label.form-label(for="mailform-last-name") Last Name
										input#mailform-last-name.form-control.bg-white(type="text" name="last name" data-constraints="@Required")
								.col-md-6
									.form-group
										label.form-label(for="mailform-phone") Phone
										input#mailform-phone.form-control.bg-white(type="text" name="phone" data-constraints="@Numeric @Required")
								.col-md-6
									.form-group
										label.form-label(for="mailform-email") E-mail
										input#mailform-email.form-control.bg-white(type="text" name="email" data-constraints="@Email @Required")
								.col-md-12
									.form-group
										label.form-label(for="mailform-message") Message
										textarea#mailform-message.form-control.bg-white(name="message" data-constraints="@Required")
							.offset-top-24.text-center
								button(type="submit").btn.btn-primary send message

	section.section( data-preset!={ title:'Map', category:'contacts', reload:true, id:'map' } )
		+google-map({
			center: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.'
		}, [{
			location: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.',
			description: '9870 St Vincent Place, Glasgow'
		}]).mod-1

	// Page Footer
	include ../sections/_section-footer-default
