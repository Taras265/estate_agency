extends  ../_skeleton

//- Includes
include  ../elements/_ui-pagination-classic
include  ../elements/_ui-google-map
include  ../elements/_ui-material-parallax

//-Title
block title
	title= cfg.nav.catalog.title

//- Page
block page

	// Page Head
	header.section.page-head

		//- RD Navbar
		+rd-navbar-top-panel(
		'rd-navbar-light',
		{
			"data-lg-auto-height": "true",
			"data-md-layout": 'rd-navbar-fixed',
			"data-lg-layout": 'rd-navbar-static',
			"data-lg-stick-up": 'true'
		},
		cfg.brand.logo,
		cfg.nav.catalog,
		cfg.nav
		)

	+breadcrumbs({
		title: 'Property Catalog',
		pathList: [
			{itemTitle: 'Catalog'}
		]
	})

	//Section Property Filter
	section.section.section-50.bg-lighter.novi-background( data-preset!={ title:'Filter form', category:'forms', reload:true, id:'filter-form' } )
		.container
			// RD Mailform
			form.rd-form.text-left.bg-lighter
				h5.font-weight-bold Property Filter
				.row.row-20.row-fix.justify-content-sm-center.offset-top-0
					.col-md-6.col-lg-4
						.form-group
							label.form-label.form-label-outside(for="form-filter-location") Location:
							select.form-control(id="form-filter-location" name="location" data-minimum-results-for-search="Infinity")
								option(value="1") any
								option(value="2") San Francisco
								option(value="3") New York
								option(value="4") Las Vegas
					.col-md-6.col-lg-4
						.form-group
							label.form-label.form-label-outside(for="form-filter-property-status") Property Status:
							select.form-control(id="form-filter-property-status" name="property-status" data-minimum-results-for-search="Infinity")
								option(value="1") any
								option(value="2") Sale
								option(value="3") Rent
								option(value="4") Commercial
					.col-md-6.col-lg-4
						.form-group
							label.form-label.form-label-outside(for="form-filter-property-type") Property Type:
							select.form-control(id="form-filter-property-type" name="property-type" data-minimum-results-for-search="Infinity")
								option(value="1") any
								option(value="2") Apartment
								option(value="3") Office
								option(value="4") Hotel

					.col-md-6.col-lg-3
						.row.row-fix
							.col-md-6
								.form-group
									label.form-label.form-label-outside(for="form-filter-min-beds") Min Beds:
									select.form-control(id="form-filter-min-beds" name="min-beds" data-minimum-results-for-search="Infinity")
										option(value="1") any
										option(value="2") 1
										option(value="3") 2
										option(value="4") 3
										option(value="5") 4

							.col-md-6
								.form-group
									label.form-label.form-label-outside(for="form-filter-min-bath") Min Baths:
									select.form-control(id="form-filter-min-bath" name="min-bath" data-minimum-results-for-search="Infinity")
										option(value="1") any
										option(value="2") 1
										option(value="3") 2
										option(value="4") 3
					.col-md-6.col-lg-3
						.form-group-multiple
							.form-group
								label.form-label.form-label-outside(for="form-filter-price-from")
									span.d-none.d-md-block Price (USD):
									span.d-md-none Price from (USD):
								input#form-filter-price-from.form-control.bg-white(type="text" name="price-from" data-constraints="@Required @IsNumeric")
							.form-group
								label.form-label.form-label-outside(for="form-filter-price-to")  &nbsp;
									span.d-md-none Price to (USD):
								input#form-filter-price-to.form-control.bg-white(type="text" name="price-to" data-constraints="@Required @IsNumeric")
					.col-md-6.col-lg-3
						.form-group-multiple
							.form-group
								label.form-label.form-label-outside(for="form-filter-area-from")
									span.d-none.d-md-block Area (Sq Ft):
									span.d-md-none Area from (Sq Ft):
								input#form-filter-area-from.form-control.bg-white(type="text" name="area-from" data-constraints="@Required @IsNumeric")
							.form-group
								label.form-label.form-label-outside(for="form-filter-area-to")  &nbsp;
									span.d-md-none Area to (Sq Ft):
								input#form-filter-area-to.form-control.bg-white(type="text" name="area-to" data-constraints="@Required @IsNumeric")
					.col-lg-3
						.row.row-20.row-fix.align-items-sm-end
							.col-md-6
								.form-group
									label.form-label.form-label-outside(for="form-filter-sorting") Sorting
									select.form-control(id="form-filter-sorting" name="sorting" data-minimum-results-for-search="Infinity")
										option(value="1") By Price
										option(value="2") By Date
							.col-md-6
								button(type="submit").btn.btn-primary.btn-block search


	//Section Properties
	section.section.section-66.section-md-bottom-110.bg-default.novi-background( data-preset!={ title:'Properties 3', category:'properties', reload:true, id:'properties-3' } )
		.container
			.row.row-65.row-fix.justify-content-sm-center
				.col-lg-8
					.row.row-65
						.col-md-6
							img.img-fluid.d-inline-block(src="images/home-img-05-370x250.jpg" width=370 height=250 alt="")
							.text-md-left.offset-top-24
								div
									h5.font-weight-bold.text-primary
										a(href="single-property-page.html") AVA Nob Hill
								h6.offset-top-10  $1199.00/mon
								ul.list-inline.list-inline-sm.list-inline-dotted.text-dark
									li.list-inline-item 1200 sq ft
									li.list-inline-item 4 bedrooms
									li.list-inline-item 2 bathrooms
								div
									p AVA Nob Hill includes studios and 1 and 2 bedroom apartments that feature an urban-inspired design that extends beyond your walls and throughout the entire community.

						.col-md-6
							img.img-fluid.d-inline-block(src="images/home-img-06-370x250.jpg" width=370 height=250 alt="")
							.text-md-left.offset-top-24
								div
									h5.font-weight-bold.text-primary
										a(href="single-property-page.html") Ashton San Francisco
								h6.offset-top-10  $1595.00/mon
								ul.list-inline.list-inline-sm.list-inline-dotted.text-dark
									li.list-inline-item 1200 sq ft
									li.list-inline-item 2 bedrooms
									li.list-inline-item 2 bathrooms
								div
									p Ashton San Francisco offers luxury apartments, eco-friendly features, and remarkable on-site resident amenities. Enjoy premier services and access to our state-of-the-art fitness center, clubhouse, business center, and outdoor fire pit lounge.

						.col-md-6
							img.img-fluid.d-inline-block(src="images/home-img-07-370x250.jpg" width=370 height=250 alt="")
							.text-md-left.offset-top-24
								div
									h5.font-weight-bold.text-primary
										a(href="single-property-page.html") The Presidio Residences
								h6.offset-top-10  $2699.00/mon
								ul.list-inline.list-inline-sm.list-inline-dotted.text-dark
									li.list-inline-item 2200 sq ft
									li.list-inline-item 4 bedrooms
									li.list-inline-item 3 bathrooms
								div
									p The Presidio Residences offer a unique opportunity to live in a national park setting and enjoy quiet neighborhoods, convenient location, beautiful open spaces, and outstanding recreational amenities.

						.col-md-6
							img.img-fluid.d-inline-block(src="images/home-img-08-370x250.jpg" width=370 height=250 alt="")
							.text-md-left.offset-top-24
								div
									h5.font-weight-bold.text-primary
										a(href="single-property-page.html") Alchemy by Alta
								h6.offset-top-10  $1199.00/mon
								ul.list-inline.list-inline-sm.list-inline-dotted.text-dark
									li.list-inline-item 1200 sq ft
									li.list-inline-item 4 bedrooms
									li.list-inline-item 2 bathrooms
								div
									p One month FREE on select apartment homes for a limited time.

						.col-md-6
							img.img-fluid.d-inline-block(src="images/home-img-09-370x250.jpg" width=370 height=250 alt="")
							.text-md-left.offset-top-24
								div
									h5.font-weight-bold.text-primary
										a(href="single-property-page.html") Avalon at Mission Bay
								h6.offset-top-10  $1595.00/mon
								ul.list-inline.list-inline-sm.list-inline-dotted.text-dark
									li.list-inline-item 1200 sq ft
									li.list-inline-item 2 bedrooms
									li.list-inline-item 2 bathrooms
								div
									p Avalon at Mission Bay located in San Francisco near the San Francisco Caltrain Station offers thoughtfully designed studio, 1, 2 and 3 bedroom apartments and town homes.

						.col-md-6
							img.img-fluid.d-inline-block(src="images/home-img-10-370x250.jpg" width=370 height=250 alt="")
							.text-md-left.offset-top-24
								div
									h5.font-weight-bold.text-primary
										a(href="single-property-page.html") Bayside Village Apartments
								h6.offset-top-10  $2699.00/mon
								ul.list-inline.list-inline-sm.list-inline-dotted.text-dark
									li.list-inline-item 2200 sq ft
									li.list-inline-item 4 bedrooms
									li.list-inline-item 3 bathrooms
								div
									p Pick your pleasure from a vantage point that puts all the best of the city's lively South Beach neighborhood within easy reach.

					.offset-top-66.text-center
						+pagination-classic(1, [{"href": "#"}, {"href": "#"}, {"href": "#"}, {"href": "#"}], {
							"title": "Prev",
							"href": "#"
						}, {"title": "Next", "href": "#"})


				.col-lg-4
					+google-map({
						center: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.'
					}, [{
						location: '9870 St Vincent Place, Glasgow, DC 45 Fr 45.',
						description: '9870 St Vincent Place, Glasgow'
					}])

	// Page Footer
	include ../sections/_section-footer-default
